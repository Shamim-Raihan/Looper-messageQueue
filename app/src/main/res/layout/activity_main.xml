<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/startButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:onClick="startThread"
        />

    <Button
        android:layout_marginLeft="10dp"
        android:id="@+id/stopButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop"
        android:onClick="stopThread"
        />

    <Button
        android:layout_marginLeft="10dp"
        android:id="@+id/taskAButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="work 1"
        android:onClick="taskA"
        />

    <Button
        android:layout_marginLeft="10dp"
        android:id="@+id/taskBButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="work 2"
        android:onClick="taskB"
        />

</LinearLayout>

















